{
  "manifest_version": 2,
  "name": "YouTube Caption Search",
  "version": "0.7",
  "description": "Search and navigate YouTube video captions with ease",
  "license": "MIT",
  "browser_specific_settings": {
    "gecko": {
      "id": "{2491f127-7449-4ac2-a4b6-17450333a9e0}",
      "data_collection_permissions": {"required": ["none"]}
    }
  },
  "permissions": [
    "activeTab",
    "*://raw.githubusercontent.com/*",
    "*://api.github.com/*",
    "*://www.youtube.com/*",
    "*://m.youtube.com/*"
  ],
  
  "content_scripts": [
    {
      "matches": ["*://www.youtube.com/watch*", "*://m.youtube.com/watch*"],
      "js": ["content.js"],
      "css": ["styles.css"],
      "run_at": "document_end"
    }
  ],
  
  "web_accessible_resources": [
    "panel.html"
  ],
  
  "icons": {
    "24": "icon24.png",
    "48": "icon48.png",
    "96": "icon96.png"
  }
}
